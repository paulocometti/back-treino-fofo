generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Category {
  id      String  @id @unique
  name    String
  user_id String?

  categoryExercise ExerciseCategory[]

  @@map("category")
}

model Exercise {
  id      String  @id @unique
  name    String
  user_id String?

  categoryExercise ExerciseCategory[]
  workoutExercise  WorkoutExercise[]

  @@map("exercise")
}

model ExerciseCategory {
  exercise_id String
  exercise    Exercise @relation(fields: [exercise_id], references: [id])

  category_id String
  category    Category @relation(fields: [category_id], references: [id])

  @@id([exercise_id, category_id])
  @@map("exercise_category")
}

model WorkoutPlan {
  id      String  @id @unique
  name    String
  user_id String?

  workoutDay WorkoutDay[]

  @@map("workout_plan")
}

model WorkoutDay {
  id   String @id @unique
  name String

  workout_plan_id String
  workoutPlan     WorkoutPlan @relation(fields: [workout_plan_id], references: [id])

  workoutExercise WorkoutExercise[]

  @@map("workout_day")
}

model WorkoutExercise {
  id          String  @id @unique
  sets        Int
  reps        Int
  observation String?

  exercise_id String
  exercise    Exercise @relation(fields: [exercise_id], references: [id])

  workout_day_id String
  workoutDay     WorkoutDay @relation(fields: [workout_day_id], references: [id])

  @@map("workout_exercise")
}
